  <h1>üß† F√≠sica por N√≠veis</h1>
  <div class="mascote" id="mascote">ü§ñ</div>
  <div class="nivel" id="nivel">N√≠vel 1 - F√°cil</div>

  <div id="quiz">
    <div class="pergunta" id="pergunta"></div>
    <div id="opcoes"></div>
    <button id="btnProxima" onclick="proximaPergunta()">üëâ Pr√≥xima</button>
  </div>

  <div id="resultado"></div>

  <script>
    const fases = [
      {
        nivel: "N√≠vel 1 - F√°cil",
        perguntas: [
          {
            pergunta: "üåç Unidade de medida da for√ßa?",
            opcoes: ["A) Joule", "B) Watt", "C) Newton", "D) Pascal"],
            resposta: "C"
          },
          {
            pergunta: "üîã Part√≠cula com carga negativa?",
            opcoes: ["A) Pr√≥ton", "B) N√™utron", "C) El√©tron", "D) F√≥ton"],
            resposta: "C"
          },
          {
            pergunta: "üìê O que √© velocidade?",
            opcoes: ["A) d/t", "B) m¬∑a", "C) F/A", "D) m¬∑c¬≤"],
            resposta: "A"
          }
        ]
      },
      {
        nivel: "N√≠vel 2 - M√©dio",
        perguntas: [
          {
            pergunta: "‚ö° O que acontece com energia num sistema isolado?",
            opcoes: ["A) Se perde", "B) Se conserva", "C) Aumenta", "D) Diminui"],
            resposta: "B"
          },
          {
            pergunta: "üî• F√≥rmula da pot√™ncia?",
            opcoes: ["A) F¬∑d", "B) V/t", "C) P = F¬∑v", "D) P = E/t"],
            resposta: "D"
          },
          {
            pergunta: "üì¶ 3¬™ Lei de Newton?",
            opcoes: ["A) A√ß√£o = Rea√ß√£o", "B) F = m¬∑a", "C) E = m¬∑c¬≤", "D) V = d/t"],
            resposta: "A"
          }
        ]
      },
      {
        nivel: "N√≠vel 3 - Dif√≠cil",
        perguntas: [
          {
            pergunta: "üåå O que √© energia cin√©tica?",
            opcoes: ["A) Energia da posi√ß√£o", "B) Energia do movimento", "C) Energia t√©rmica", "D) Energia solar"],
            resposta: "B"
          },
          {
            pergunta: "üå°Ô∏è Lei de conserva√ß√£o da energia diz que:",
            opcoes: ["A) Energia pode ser criada", "B) Energia desaparece", "C) Energia √© constante", "D) Energia vira mat√©ria"],
            resposta: "C"
          },
          {
            pergunta: "üß≤ Unidade de campo magn√©tico?",
            opcoes: ["A) Newton", "B) Tesla", "C) Joule", "D) Coulomb"],
            resposta: "B"
          }
        ]
      }
    ];

    let faseAtual = 0;
    let perguntaAtual = 0;
    let pontos = 0;
    let acertosFase = 0;
    let bloqueado = false;

    const mascote = document.getElementById("mascote");

    function carregarPergunta() {
      const fase = fases[faseAtual];
      const q = fase.perguntas[perguntaAtual];
      document.getElementById("nivel").innerText = fase.nivel;
      document.getElementById("pergunta").innerText = q.pergunta;
      const opcoesDiv = document.getElementById("opcoes");
      opcoesDiv.innerHTML = "";
      bloqueado = false;
      mascote.innerText = "ü§ñ";

      q.opcoes.forEach(op => {
        const btn = document.createElement("div");
        btn.className = "opcao";
        btn.innerText = op;
        btn.onclick = () => verificarResposta(btn, op[0]);
        opcoesDiv.appendChild(btn);
      });

      document.getElementById("btnProxima").style.display = "none";
    }

    function verificarResposta(elemento, letra) {
      if (bloqueado) return;
      bloqueado = true;

      const fase = fases[faseAtual];
      const correta = fase.perguntas[perguntaAtual].resposta;
      const opcoes = document.querySelectorAll(".opcao");

      opcoes.forEach(op => {
        const letraOp = op.innerText[0];
        if (letraOp === correta) op.classList.add("correta");
        if (letraOp === letra && letraOp !== correta) op.classList.add("errada");
        op.style.pointerEvents = "none";
      });

      if (letra === correta) {
        pontos++;
        acertosFase++;
        mascote.innerText = "üòé Mandou bem!";
      } else {
        mascote.innerText = "üòµ Opa!";
      }

      document.getElementById("btnProxima").style.display = "inline-block";
    }

    function proximaPergunta() {
      perguntaAtual++;
      const fase = fases[faseAtual];

      if (perguntaAtual < fase.perguntas.length) {
        carregarPergunta();
      } else {
        if (acertosFase >= 2) {
          faseAtual++;
          if (faseAtual < fases.length) {
            perguntaAtual = 0;
            acertosFase = 0;
            mascote.innerText = "üöÄ Subindo de n√≠vel!";
            setTimeout(carregarPergunta, 1000);
          } else {
            mostrarResultadoFinal();
          }
        } else {
          mostrarFimDeJogo();
        }
      }
    }

    function mostrarFimDeJogo() {
      document.getElementById("quiz").style.display = "none";
      document.getElementById("resultado").innerHTML = `üò¢ Voc√™ n√£o passou de n√≠vel.<br>Acertou ${pontos} perguntas no total.`;
      mascote.innerText = "üíÄ";
    }

    function mostrarResultadoFinal() {
      document.getElementById("quiz").style.display = "none";
      document.getElementById("resultado").innerHTML = `üéâ Parab√©ns! Voc√™ completou todos os n√≠veis!<br>Total de acertos: <strong>${pontos}</strong>`;
      mascote.innerText = "üèÜ";
    }


    carregarPergunta();
  </script>

